@model IEnumerable<Entities.Products>
@{
    ViewData["Title"] = "GetAllProducts";
}
<h1>
    Products List
    <span class="float-right">
        <a asp-action="Create" class="btn btn-primary">Add Product</a>
    </span>
</h1>
<table class="table" style="width:100% !important;">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr> 
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @*<img src="@item.ImageUrl" class="w-" />*@
                    <img src="@item.ImageUrl" style="width:20% !important;" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Productid }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Productid, url = item.ImageUrl },
                   new { @class = "btn btn-danger", onclick = "return confirm('Are Your Sure To Delete it?')" })
                </td>
            </tr>
        }
    </tbody>
</table>
